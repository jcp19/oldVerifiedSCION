type DecodeFuncInterface interface {

	requires (forall i int :: i >= 0 && i < len(data) ==> acc(&data[i])) && p.Mem()
	ensures (forall i int :: i >= 0 && i < len(data) ==> acc(&data[i])) && p.Mem()
